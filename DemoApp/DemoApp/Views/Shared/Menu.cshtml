@{
    var controller = (string)ViewContext.RouteData.Values["controller"];
    var homeActive = controller == "HomeWeb" ?  "active" : "";
    var infoActive = controller == "InfoWeb" ?  "active" : "";
}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">SignalR / WebAPI Demo</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li role="presentation" class="@homeActive">@Html.RouteLink("Home","DefaultRoute")</li>
                <li role="presentation" class="@infoActive">@Html.ActionLink("Info", "Info", "InfoWeb")</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
